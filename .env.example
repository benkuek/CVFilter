# Auth0 Configuration
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_DOMAIN=https://your-tenant.auth0.com

# Application Configuration
AUTH_SECRET=your_jwt_secret_key_here
REDIRECT_URI=http://localhost:3000/api/auth/callback
SESSION_DURATION=6h
SESSION_COOKIE_NAME=session
OAUTH_STATE_COOKIE_NAME=oauth_state
OAUTH_STATE_DURATION=600
OAUTH_SCOPE=openid email profile

# Content Security Policy domains (comma-separated)
CSP_DOMAINS=https://your-tenant.auth0.com,https://cdn.auth0.com

# AWS Region Configuration
AWS_REGION=ap-southeast-2

# Authorization Storage Configuration
# Set to 'file' for local development, 'dynamodb' for production
STORAGE_TYPE=file
# DynamoDB Configuration (only needed when CV_DATA_SOURCE=dynamodb)
DYNAMODB_TABLE=Users

# CV Data Source Configuration
# Set to 'file' for local development, 'dynamodb' for production
CV_DATA_SOURCE=file
# DynamoDB Configuration (only needed when CV_DATA_SOURCE=dynamodb)
CV_NODES_TABLE=cv-nodes
CV_LINKS_TABLE=cv-links